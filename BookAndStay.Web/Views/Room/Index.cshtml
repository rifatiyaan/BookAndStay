@model IEnumerable<Room>

<div class="row">
    <div class="col">
        <h1>Lists of Rooms</h1>
    </div>

    <div class="col">
        <a asp-action="Create" asp-controller="Room" class="btn btn-secondary">Create New Room</a>
    </div>
</div>


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Room Category</th>
            <th scope="col">Room Number</th>
            <th scope="col">Special Details</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Category.RoomType</td>
                <td>@obj.Room_Number</td>
                <td>@obj.SpecialDetails</td>
                <td>
                    <div class="w-75 btn-group">
                        <a asp-controller="Room" asp-action="Update" asp-route-roomNumberId="@obj.Room_Number" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Room" asp-action="Delete" asp-route-roomNumberId="@obj.Room_Number" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>