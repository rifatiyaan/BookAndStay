@model IEnumerable<Amenity>

<div class="row">
    <div class="col">
        <h1>Amenity List</h1>
    </div>

    <div class="col">
        <a asp-action="Create" asp-controller="Amenity" class="btn btn-secondary">Create Amenity</a>
    </div>
</div>


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Room Number</th>
            <th scope="col">Categories</th>
            <th scope="col">Occupancy</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.Category.RoomType</td>
                <td>
                    <div class="w-75 btn-group">

                        <a asp-controller="Amenity" asp-action="Update" asp-route-AmenityNumberId="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>


                        <a asp-controller="Amenity" asp-action="Delete" asp-route-AmenityNumberId="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>



                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


