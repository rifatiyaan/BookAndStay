@model IEnumerable<BookAndStay.Domain.Entities.Category>

<div class="row">
    <div class="col">
        <h1>Cateogory List</h1>
    </div>

    <div class="col">
        <a asp-action="Create" asp-controller="Category" class="btn btn-secondary">Room Categories</a>
    </div>
</div>


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Room Number</th>
            <th scope="col">Categories</th>
            <th scope="col">Occupancy</th>
        </tr>
    </thead>
    <tbody>
 
            @foreach(var obj in Model)
            {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.RoomType</td>
                <td>@obj.Occupancy</td>
                <td>
                    <div class="w-75 btn-group">
                        <a asp-controller="Category" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
            }
    </tbody>
</table>


