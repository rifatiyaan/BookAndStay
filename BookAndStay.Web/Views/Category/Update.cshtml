@model Category;
<div class="card-body border p-4">
    <div class="row justify-content-center">
        <div class="col-6">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Id" hidden />
                <div asp-validation-summary="All"></div>

                <div class="row">
                    <div class="col-6">
                        <div div class="mb-2 row p-1">
                            <label class="pb-1" asp-for="RoomType"></label>
                            <input asp-for="RoomType" class=" form-control">
                            <span asp-validation-for="RoomType" class="text-danger"></span>
                        </div>

                        <div div class="mb-2 row p-1">
                            <label class="pb-1" asp-for="Description"></label>
                            <input asp-for="Description" class="form-control">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div div class="mb-2 row p-1">
                            <label class="pb-1" asp-for="Price"></label>
                            <input asp-for="Price" class=" form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div div class="mb-2 row p-1">
                            <label class="pb-1" asp-for="ImageUrl"></label>
                            <input asp-for="Image" class="form-control">
                            <input asp-for="ImageUrl" class="form-control" hidden>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        <div div class="mb-2 row p-1">
                            <label class="pb-1" asp-for="Occupancy"></label>
                            <input asp-for="Occupancy" class="form-control">
                            <span asp-validation-for="Occupancy" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-6 border-2" style="margin-top:2rem; padding-left:2rem">
                        <img src="@Model.ImageUrl" width="100%" style="border-radius:5px;
                                   border:1px solid dashed " />
                    </div>

                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}